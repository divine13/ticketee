<%= form_for([:admin, @user]) do |f| %>
<%= render "shared/error_messages", object: f.object %>

<p>
<%= f.label(:email) %>
<%= f.text_field(:email) %>
</p>
<p>
<%= f.label(:password) %>
<%= f.password_field(:password) %>
</p>
<%# f.label(:password_confirmation) %>
<%# f.password_field(:password_confirmation) %>
<p>
<%= f.check_box(:admin) %>
<%= f.label(:admin, "is admin?") %>
</p>
<%= f.submit %>
<% end -%>