<% @project.tickets.each do |tkt| %>
<ul >

<li id="ticket"> #<%=  tkt.id  %> -<%= link_to(tkt.title, [@project, tkt]) %>
<small>Created by <%= tkt.user.email %></small>
<%= simple_format(tkt.description) %>

<% if(@ticket.asset.exists?) %>
<h3>Attached file</h3>
<div class="asset">

<p><%= link_to(File.basename(@ticket.asset.path), @ticket.asset.url) %>
</p>
<p><small><%= number_to_human_size(@ticket.asset.size) %>
(<%= @ticket.asset.content_type %>)</small></p>

<% end %>

</div>
<%= authorized?("edit tickets", @project) do %>
<%= link_to("Edit Ticket", [:edit, @project, @ticket]) %>
<% end %>
<%= authorized?("delete tickets", @project) do %>
<%= link_to("Delete Ticket", [@project, @ticket], method: :delete, confirm: "are you sure mate") %>
<% end %>
</li>
<% end %>
</ul>
