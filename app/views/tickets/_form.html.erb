<% number = 0 %>
<%= form_for([@project, @ticket], html: { multipart: true } ) do |f| %>
<p>
<%= render 'shared/error_messages', object: f.object %>

<%= f.label(:title) %>
<%= f.text_field(:title) %>
</p>

<p>
<%= f.label(:description) %> <br />
<%= f.text_area(:description) %>
</p>
<p>
<%= label_tag :tags %> 
<%= text_field_tag :tags, params[:tags] %>
</p>
<%=render partial: "files/form", locals: { number: number } %>
<%= link_to "add another file", new_file_path, remote: true, update: "files", 
position: "after", id: "add_another_file" %>

<%= f.submit %>
<% end %>